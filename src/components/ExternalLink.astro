---
interface Props {
    type: LinkType;
}

export enum LinkType {
    Premium = 'premium',
    Support = 'support',
    Invite = 'invite',
}

import { links, } from '../config';

const { type, } = Astro.props;

const href = links[type];

---

<a href={href} target="_blank"><slot>{
    type === LinkType.Premium ? 'Starboard Premium'
    : type === LinkType.Support ? 'Support Server'
    : '???'
}</slot></a>